#: import Overview views.overview.Overview
#: import Currency views.currencies.Currency
#: import Exchange views.exchanges.Exchange
#: import Strategy views.strategies.Strategy
#: import Optimize views.strategies.Optimize

<Home>:
	orientation: 'vertical'
	ScreenManager:
		id: scrn_mngr
		Screen:
			name: 'scrn_overview'
			Overview:
				id: overview
		Screen:
            name: 'scrn_coins'
            Currency:
                id: currency
		Screen:
			name: 'scrn_exchanges'
			Exchange:
				id: exchange
		Screen:
			name: 'scrn_strategies'
			Strategy:
				id: strategy
		Screen:
			name: 'scrn_optimize'
			Strategy:
				id: optimize

	AnchorLayout:
		size_hint_y: None
		height: dp(54)
		BoxLayout:
			size_hint_x: .5
			spacing: dp(12)
			padding: [dp(6), dp(12)]
			halign: "center"
			TabIcon:
				text: icon("icon-dollar-sign")
				on_release: 
					self.state = "down"
					scrn_mngr.current = "scrn_coins"
			TabIcon:
				text: icon("icon-home")
				state: "down"
				on_release: 
					self.state = "down"
					scrn_mngr.current = "scrn_overview"
			TabIcon:
				text: icon("icon-activity")
				on_release: 
					self.state = "down"
					scrn_mngr.current = "scrn_strategies"
			TabIcon:
				text: icon("icon-settings")
				on_release: 
					self.state = "down"
					scrn_mngr.current = "scrn_exchanges"

<TabIcon@ToggleButton>:
	background_color: [0,0,0,0]
	background_normal: ""
	background_disabled: ""
	background_down: ""
	size_hint: [None, 1]
	font_size: app.fonts.size.h3
	group: 'tabs'
	width: self.height
	markup: True
	color: app.colors.white if self.state == 'down' else app.colors.primary
	canvas.before:
		Color:
			rgba: app.colors.primary if self.state == 'down' else [0,0,0,0]
		Ellipse:
			pos: self.pos
			size: self.size
	